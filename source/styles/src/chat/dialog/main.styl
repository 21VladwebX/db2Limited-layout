.dialog
	margin: 0 1px;
	width: 554px;
	// border-left: 1px solid #eaeef1;

	&__header
		border-bottom: 1px solid #f5f6f9;
		width: 100%;
		height: 48px;
		background-color: #fff;
		padding: 4px;
		display: flex;
		align-items: center;
		border-top-right-radius: 5px;
		
		input
			border: none;
			background-color: #fff;
	
	&__main
		overflow-y: scroll;
		width: calc(100% - 35px);
		height: 450px;
		background-color: #fff;
		display: flex;
		flex-direction: column-reverse; 
		padding: 21px;
		border: 1px solid #f5f6f9;
		.message
			margin-top: 20px;
			border-radius: 3px;
			.text
				margin-left: 10px;
				display: block;
				padding: 14px;
				background-color: #f7f9fc;
				position: relative;
				max-width: 50%;
				padding-left: 40px;
				.time
					position: absolute;
					left: calc(100% - 30px);
					top: calc(100% - 20px);
					font-size: 9px;
					width: 20px;
					color: #9ba0ad;	
			&__fromMe
				position: relative;
				margin-left: auto
				position: relatuve;
				&:after
					content: '';
					position: absolute;
					left: 76%;
					top: calc(90% - .5px);
					width: 0;
					height: 0;
					border-top: 7px solid transparent;
					border-left: 15px solid #f7f9fc;
					border-bottom: 0px solid transparent;

			&__toMe
				display: flex;
				flex-wrap: nowrap;
				position: relative;
				&:after
					content: '';
					position: absolute;
					left: 6.5%;
					top: calc(90% - 2px);
					width: 0;
					height: 0;
					border-top: 7px solid transparent;
					border-right: 15px solid #f7f9fc;
					border-bottom: 0px solid transparent;
				img
					margin-top: 10px;
					width: 36px;
					height: 36px;
					border-radius: 50%;
				
