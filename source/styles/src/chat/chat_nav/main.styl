.chat__nav
	width: 300px;
	height: 100%;
	margin-left: 65px;
	&-elem
		padding-top: 20px;
		display: flex;
		align-items: center;
		padding: 21px;
		
		&:not(:first-of-type)
			margin-top: 6px;
		img
			width: 60px;
			height: 50px;
			border-radius: 50%;
			
		.elem__text
			margin-left: 15px;
			position: relative;
			
			h1
				font-size: 13px;
				color: #01134e;
			
			span
				font-size: 13px;
				color: #a7acb7;
			.online
				position: absolute;
				left: 65%;
				top: 15%;
				width: 5px;
				height: 5px;
				border-radius: 50%;
				background-color: #0ad69c;
			.mute
				opacity: .5;
				top: 25%;
				left: 70%;
				position: absolute;
				width: 10px;
				height: 10px;
			.time
				position: absolute;
				left: 95%;
				top: -30%;
		&:hover
			box-shadow: 0px 1px 10px rgba(0,0,0,0.1);